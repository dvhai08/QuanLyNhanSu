@model IEnumerable<QuanLyNhanSu.Models.CapNhatLuong>

@{
    ViewBag.Title = "Quá trình";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Cập nhật bảng lương nhân viên
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("index","Admin")">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-money"></i><a href="@Url.Action("index","QuanLyLuong")">Lương</a>
            </li>
            <li>
                <i class="fa fa-money"></i> Quá trình lương
            </li>
        </ol>
    </div>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table  table-striped table-hover table-bordered ">
        <thead>
            <tr class="success">
                <th>
                    Mã nhân viên
                </th>
                <th>
                    Lương trước khi cập nhật
                </th>
                <th>
                    Lương sau khi cập nhật
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.BHXH)
                </th>
                <th>
                    Phụ cấp
                </th>
                <th>
                    Thuế thu nhập
                </th>
                <th>
                    Ngày áp dụng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Luong.MaNhanVien)
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.LuongHienTai).Replace(",", ",")
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.LuongSauCapNhat).Replace(",", ",")
                     
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.BHXH).Replace(",", ",")
                      
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.PhuCap).Replace(",", ",")
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.ThueThuNhap).Replace(",", ",")
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", @item.NgayCapNhat)
                    </td>
                 
                </tr>
            }
        </tbody>
    </table>
</div>
