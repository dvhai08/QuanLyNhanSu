@{
    ViewBag.Title = "Index user";
}
@using QuanLyNhanSu.Models
@model List<NhanVien>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Nhân viên
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="@Url.Action("index","Admin")">Dashboard</a>
                </li>
                <li>
                    <i class="fa fa-bar-chart-o"></i> Nhân viên
                </li>
            </ol>
        </div>
    </div>
    <div>
        <div style="margin:10px">
            <a href="@Url.Action("ThemUser", "QuanLyUser")">
                <button class="btn btn-primary">Thêm nhân viên</button>
            </a>
        </div>
        <div class="table-responsive">
            <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
                <thead>
                    <tr class="success">
                        <th>Tài khoản</th>
                        <th>Họ và tên</th>

                        <th>Giới tính</th>
                        <th>Số tài khoản: @Model.Count</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            string gioitinh = string.Empty;
                            switch (item.GioiTinh)
                            {
                                case 0:
                                    gioitinh = "Nữ";
                                    break;
                                case 1:
                                    gioitinh = "Nam";
                                    break;
                                default:
                                    gioitinh = "Khác";
                                    break;
                            }
                            <tr>
                                <td>@item.MaNhanVien</td>
                                <td>@item.HoTen</td>

                                <td>@gioitinh</td>
                                <td>
                                    <a class="btn btn-warning" href="@Url.Action("UpdateUser", "QuanLyUser", new {@id = @item.MaNhanVien })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                                    <a class="btn btn-danger" href="@Url.Action("XoaUser", "QuanLyUser", new { @id = @item.MaNhanVien })"><i class="fa fa-trash-o">Xóa</i></a>
                                </td>
                            </tr>

                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>